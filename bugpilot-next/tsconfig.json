{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ES2017",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./package.json",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}